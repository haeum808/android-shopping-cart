<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shopping="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="order"
            type="woowacourse.shopping.presentation.uistate.Order" />

        <variable
            name="homeActionHandler"
            type="woowacourse.shopping.presentation.home.HomeActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_thumbnail"
            android:onClick="@{() -> homeActionHandler.onProductItemClick(order.product.id)}"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            shopping:productThumbnail="@{order.product.imageSource}"
            tools:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/iv_round_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> homeActionHandler.onAddCartItem(order.product.id) }"
            android:src="@drawable/ic_circle_plus"
            android:visibility="@{order.quantity == 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_detail"
            app:layout_constraintEnd_toEndOf="@id/iv_product_detail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="@{order.quantity > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_detail"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> homeActionHandler.onCartItemRemove(order.product.id)}"
                android:padding="12dp"
                android:src="@drawable/ic_minus"
                />

            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(order.quantity)}"
                android:textColor="@color/gray_500"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="1" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> homeActionHandler.onCartItemAdd(order.product.id)}"
                android:padding="12dp"
                android:src="@drawable/ic_plus"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{order.product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/format_price(order.product.price)}"
            android:textColor="@color/gray_500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_product_title_detail"
            app:layout_constraintStart_toStartOf="@id/tv_product_title_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title_detail"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
